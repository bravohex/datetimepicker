{
    "root": true,
    "env": {
        "node": true
    },
    "extends": [
        "plugin:vue/recommended",
        "eslint:recommended",
        "@vue/airbnb"
    ],
    "rules": {
        "import/extensions": ["error", "always", {
            "js": "never",
            "vue": "never"
        }],
        "indent": "off",
        "semi": ["error", "never"],
        "vue/html-indent": ["error", 4, {
            "baseIndent": 1
        }],
        "vue/script-indent": ["error", 4, {
            "baseIndent": 1
        }]
    },
    "parserOptions": {
        "parser": "babel-eslint"
    }
}
